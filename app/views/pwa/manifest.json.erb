{
  "name": "<%= Current.account&.name || t("pwa.manifest.default_name") %>",
  "icons": [
    {
      "src": "<%= fresh_account_logo_path(size: :small) %>",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "<%= fresh_account_logo_path %>",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "<%= fresh_account_logo_path %>",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "start_url": "/",
  "display": "standalone",
  "scope": "/",
  "description": "<%= t("pwa.manifest.description") %>",
  "categories": <%= t("pwa.manifest.categories").to_json %>,
  "theme_color": "#ffffff",
  "background_color": "#ffffff",
  "shortcuts": [
    {
      "name": "<%= t("pwa.manifest.shortcuts.new_room.name") %>",
      "description": "<%= t("pwa.manifest.shortcuts.new_room.description") %>",
      "url": "rooms/opens/new",
      "icons": [{ "src": "<%= image_url("add.svg") %>", "sizes": "any" }]
    },
    {
      "name": "<%= t("pwa.manifest.shortcuts.profile.name") %>",
      "description": "<%= t("pwa.manifest.shortcuts.profile.description") %>",
      "url": "/users/me/profile",
      "icons": [{ "src": "<%= image_url("person.svg") %>", "sizes": "any" }]
    }
  ],
  "screenshots": [
    {
      "src": "<%= image_url("screenshots/android-chat.png") %>",
      "sizes": "1080x2400",
      "form_factor": "narrow",
      "label": "<%= t("pwa.manifest.screenshots.chat") %>"
    },
    {
      "src": "<%= image_url("screenshots/android-sidebar.png") %>",
      "sizes": "1080x2400",
      "form_factor": "narrow",
      "label": "<%= t("pwa.manifest.screenshots.sidebar") %>"
    },
    {
      "src": "<%= image_url("screenshots/android-dark-mode.png") %>",
      "sizes": "1080x2400",
      "form_factor": "narrow",
      "label": "<%= t("pwa.manifest.screenshots.dark") %>"
    }
  ]
}
